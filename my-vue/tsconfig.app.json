{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*.tsx", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "dist"],
  "compilerOptions": {
    "composite": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "element-plus/global"]
  }
}
